@model Transacao

@{
    ViewData["Title"] = "Eviar PIX";
}

<h1>Enviar Pix</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroConta" class="control-label"></label>
                <input asp-for="NumeroConta" class="form-control" />
                <span asp-validation-for="NumeroConta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroAgencia" class="control-label"></label>
                <input asp-for="NumeroAgencia" class="form-control" />
                <span asp-validation-for="NumeroAgencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChavePix" class="control-label"></label>
                <input asp-for="ChavePix" class="form-control" />
                <span asp-validation-for="ChavePix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="w-75 btn-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary rounded btn-sm" />
                <a asp-action="Index" class="btn btn-secondary btn-sm rounded btn-sm mx-2">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
