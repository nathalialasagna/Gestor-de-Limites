
@model IEnumerable<Conta>

@{
    ViewData["Title"] = "Index";
}
<h1>Contas</h1>
<br />
<p>
    <a asp-action="Create" class="btn btn-primary mx-2"> + Cadastro </a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
               Agencia
            </th>
            <th>
               Numero
            </th>
            <th>
                Documento
            </th>
            <th>
                Limite
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Agencia
                </td>
                <td>
                    @obj.Numero
                </td>
                <td>
                    @obj.Documento
                </td>
                <td>
                    @obj.Limite
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Numero" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Numero" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>