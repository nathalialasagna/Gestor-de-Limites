@model Conta

@{
    ViewData["Title"] = "Remover Conta";
}

<h1>Remover conta</h1>

<h3>Você tem certeza que deseja remover a conta?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Agencia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Agencia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Numero)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Numero)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Documento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Limite)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Limite)
        </dd>
    </dl>
    
    <form asp-controller="Conta" asp-action="Delete" asp-route-numeroConta="@Model.Numero" asp-route-numeroAgencia="@Model.Agencia">
        <div class="w-40 btn-group mt-2">
        <input type="submit" value="Remover" class=" btn btn-primary rounded btn-sm" />
        <a asp-action="Index" class="btn btn-secondary btn-sm rounded btn-sm mx-2">Voltar</a>
        </div>
    </form>
</div>
